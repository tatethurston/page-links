{
  "manifest_version": 2,
  "name": "Page Links",
  "version": "0.0.2",
  "description": "Share links to specfic sections or text on a webpage",
  "short_name": "Page Links",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_title": "Link to text",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": ["icons/*.png"]
}
